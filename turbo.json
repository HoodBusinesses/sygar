{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": [
        "^build"
      ],
      "inputs": [
        "$TURBO_DEFAULT$",
        ".env*"
      ]
    },
    "start": {
      "dependsOn": [
        "^start"
      ]
    },
    "format": {
      "dependsOn": [
        "^format"
      ],
      "outputs": []
    },
    "lint": {
      "dependsOn": [
        "^format",
        "^lint",
        "format"
      ],
      "outputs": []
    },
    "start:dev": {
      "cache": false,
      "persistent": true
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "web:build": {
      "dependsOn": [],
      "inputs": [
        "apps/web/**/*",
        ".env*"
      ],
      "outputs": [
        "apps/web/.next/**",
        "dist/web/**"
      ]
    },
    "desktop:build": {
      "dependsOn": [],
      "inputs": [
        "apps/desktop/**/*",
        ".env*"
      ],
      "outputs": [
        "dist/desktop/**"
      ]
    },
    "web:start": {
      "cache": false,
      "persistent": true,
      "inputs": [
        "apps/web/**/*"
      ]
    },
    "desktop:start": {
      "cache": false,
      "persistent": true,
      "inputs": [
        "apps/desktop/**/*"
      ]
    }
  }
}
